:: StoryScript [script]
/* ACCESIBILIDAD */
// Establecer lenguaje del documento como español
document.documentElement.lang = "es";

// Intercambiar orden de #story y #ui-bar
// (se debe leer el contenido principal antes que la barra lateral)
$('#story').insertBefore('#ui-bar');

// Establecer barra lateral como landmark complementario
$('#ui-bar').attr('role', 'complementary');

/* FUNCIONALIDADES */
// Botón para silenciar SFX
const $button = $('button.macro-button');

// $('#soundToggle')
$button.click(function() {
    State.variables.audio = !State.variables.audio;
    
    // Actualizar el botón
    $(this).html(State.variables.audio ? '🔊' : '🔇');
    
    // Actualizar el mensaje
    $('#soundStatus').html(
      State.variables.audio 
        ? '<p class="active">El sonido está activado</p>' 
        : '<p class="inactive">El sonido está desactivado</p>'
    );
    
    // Controlar el audio (versión simple)
    document.querySelectorAll('audio').forEach(audio => {
      audio.muted = !State.variables.audio;
    });
    
    // Opcional: Mostrar notificación temporal
    const notification = State.variables.audio 
      ? 'Sonido ACTIVADO' 
      : 'Sonido DESACTIVADO';
    $(document).trigger(':notify', notification);
  });

